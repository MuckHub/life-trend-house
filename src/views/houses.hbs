<div class="container">

  <div class="row mx-auto">

    {{#each houses}}
    <div class="col-lg-4">
      <div class="card mt-4 mx-auto" style="width: 18rem;">
        <a href="/houses/{{this._id}}">
          <img src={{this.images}} class="card-img-top" alt="img1.jpg">
        </a>
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="/houses/{{this._id}}" class="btn btn-primary">Подробнее</a>
        </div>
      </div>
    </div>
    {{/each}}

