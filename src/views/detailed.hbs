<div id={{houses.id}} class="container">
  <div class="card mt-4 mx-auto">
    <div class="card-header">
      {{houses.name}}
      {{#if isAuth}}
      <div class='btn-admin'>
        <a href="{{houses.id}}/edit" class="btn btn-primary mt-4">Edit</a>
        <a href="#" class="btn btn-primary mt-4" data-toggle="modal" data-target="#exampleModal">Delete</a>
      </div>
      {{/if}}
    </div>
    <div class="card-body mx-auto">
      <img class="rounded mt-5 text-center img-fluid" src="/img/{{houses.images}}" class="img-fluid" alt="">
      <p class="card-text mt-4">{{houses.description}}</p>
      <div class="price mt-2">Price: ${{houses.price}}</div>
      <a href="#" id='request' class="btn btn-primary mt-4">Оставить заявку</a>

      <form id='requestForm' class='hidden mt-4'>
        <div method='POST' class="form-group">

          <input name='phone' type="text" placeholder="Номер телефона" class="form-control" id="phoneRequest">
        </div>
        <div class="form-group">

          <input name='email' type="email" placeholder="Адрес электронной почты" class="form-control" id="emailRequest">
        </div>

        <button id='submitButton' type="submit" class="btn btn-primary">Отправить заявку</button>
      </form>

    </div>
  </div>




  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Вы уверены, что хотите удалить эту запись?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <button id="delete-btn" type="button" class="btn btn-primary">Удалить</button>
      </div>
    </div>
  </div>
</div>

</div>

