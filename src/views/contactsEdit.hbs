<div class="container">
  <div class="card mt-4 mx-auto">
    <div class="card-header">
      Редактировать
    </div>
    <div class="card-body mx-auto">
      <form method="POST" action="/contacts/edit">
        <div class="form-group">
          <label for="house-description">Описание</label>
          <textarea name="name" type="text" class="form-control" rows="3" id="contact-name">{{contact.name}}</textarea>
        </div>
        <div class="form-group">
          <label for="house-description">Телефон</label>
          <input name="tel" type="text" class="form-control" value="{{contact.tel}}" id="contact-tel">
        </div>
        <div class="form-group">
          <label for="house-description">Email</label>
          <input name="email" type="text" class="form-control" value="{{contact.email}}" id="contact-email">
        </div>
        <div class="form-group">
          <label for="house-description">Адрес</label>
          <input name="address" type="text" class="form-control" value="{{contact.address}}" id="contact-address">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Редактировать</button>
      </form>
    </div>
  </div>
</div>
